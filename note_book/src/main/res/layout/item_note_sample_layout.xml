<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="noteInfo"
            type="com.inz.z.note_book.bean.NoteInfo" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textGrayLight"
        android:paddingStart="@dimen/border_lr_dimen"
        android:paddingTop="@dimen/content_space_between_dimen"
        android:paddingEnd="@dimen/border_lr_dimen"
        android:paddingBottom="@dimen/content_space_between_dimen">


        <TextView
            android:id="@+id/item_note_sample_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{noteInfo.noteTitle, default=@string/base_title}"
            android:textColor="@color/textWhiteColor"
            android:textSize="@dimen/body_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_note_sample_update_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_note_sample_title_tv"
            android:layout_marginTop="@dimen/content_space_between_dimen"
            android:text="@{noteInfo.updateDate, default=@string/base_content}"
            android:textColor="@color/textSecondColor"
            android:textSize="@dimen/caption_text_size" />


    </RelativeLayout>
</layout>