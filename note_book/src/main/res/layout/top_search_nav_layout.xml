<?xml version="1.0" encoding="utf-8"?>
<com.inz.z.base.view.widget.BaseNavLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_search_nav_rl"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/snow"
    app:base_center_layout="@id/top_search_nav_content_rl"
    app:base_left_layout="@id/top_search_nav_scan_iv"
    app:base_right_layout="@id/top_search_nav_end_rl">

    <ImageView
        android:id="@+id/top_search_nav_scan_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/base_image"
        android:padding="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_chevron_left_black_24dp" />

    <RelativeLayout
        android:id="@+id/top_search_nav_content_rl"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_nav_search"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/base_image"
                android:scaleType="centerInside"
                android:src="@drawable/ic_vd_word" />
        </LinearLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/top_search_nav_search_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_search_nav_end_rl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:gravity="center">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/base_image"
            android:padding="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_vd_image" />
    </RelativeLayout>


</com.inz.z.base.view.widget.BaseNavLayout>