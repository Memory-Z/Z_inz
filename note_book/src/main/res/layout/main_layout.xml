<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/note_main_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blueviolet"
        android:visibility="visible">

    </FrameLayout>

    <com.inz.z.base.view.widget.BaseRelativeLayout
        android:id="@+id/note_main_left_rl"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/gray"
        app:base_relative_layout_content_view="@id/note_main_left_content_tv"
        app:base_relative_layout_header_view="@id/note_main_left_header_tv">

        <TextView
            android:id="@+id/note_main_left_header_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/green"
            android:text="@string/app_name"
            android:textColor="@color/blueviolet"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/note_main_left_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/base_title"
            android:textColor="@color/blueviolet"
            android:textSize="20sp" />

    </com.inz.z.base.view.widget.BaseRelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>