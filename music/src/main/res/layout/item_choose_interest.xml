<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/music_item_choose_interest_civ"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/music_item_choose_interest_hint_civ"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha=".8"
        android:background="@drawable/music_choose_hint"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/music_item_choose_interest_civ"
        app:layout_constraintEnd_toEndOf="@id/music_item_choose_interest_civ"
        app:layout_constraintStart_toStartOf="@id/music_item_choose_interest_civ"
        app:layout_constraintTop_toTopOf="@id/music_item_choose_interest_civ" />

    <TextView
        android:id="@+id/music_item_choose_interest_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/musicWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music_item_choose_interest_civ" />

    <TextView
        android:id="@+id/music_item_choose_interest_detail_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/musicGray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music_item_choose_interest_name_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>