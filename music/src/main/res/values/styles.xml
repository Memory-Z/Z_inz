<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MusicTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/musicPrimary</item>
        <item name="colorPrimaryDark">@color/musicPrimaryDark</item>
        <item name="colorAccent">@color/musicAccent</item>
    </style>

    <style name="MusicTheme.NoActionBar" parent="MusicTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MusicTheme.NoActionBar.Transparent" parent="MusicTheme.NoActionBar">
        <item name="colorPrimary">@color/musicPrimary</item>
        <item name="actionBarStyle">@style/TranActionBar</item>
        <item name="toolbarStyle">@style/TranActionBar</item>
    </style>

    <style name="TranActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetRight">0dp</item>
    </style>

    <style name="MusicTheme.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:backgroundSplit">@color/transition</item>
        <item name="android:backgroundStacked">@color/transition</item>
    </style>

    <!--Dialog 样式-->
    <style name="MusicTheme.DialogTheme" parent="Theme.AppCompat.Dialog">
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否显示title-->
        <item name="android:windowNoTitle">true</item>
        <!--设置dialog的背景，（#00000000）-->
        <item name="android:background">@android:color/transparent</item>
        <!--显示区域背景是否透明，（#00000000）-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 底部弹出动画 -->
    <style name="MusicTheme.BottomDialogAnim" parent="MusicTheme.DialogTheme">
        <item name="android:windowEnterAnimation">@anim/dialog_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_bottom</item>
    </style>
</resources>