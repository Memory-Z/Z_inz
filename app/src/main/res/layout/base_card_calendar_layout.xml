<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/base_card_calendar_header_rl"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp56"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <!-- 日历内容 -->
    <GridView
        android:id="@+id/base_card_calendar_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/dp01"
        android:numColumns="7"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/dp01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/base_card_calendar_header_rl">

    </GridView>

</android.support.constraint.ConstraintLayout>