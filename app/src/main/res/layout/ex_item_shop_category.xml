<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ex_item_shop_category_model_bg01_iv"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:contentDescription="@string/item_image"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/item_image"
        android:src="@drawable/ex_shade_alpha_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- model -->
    <TextView
        android:id="@+id/ex_item_shop_category_model_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16"
        android:text="@string/new_model"
        android:textColor="@color/card_white_default"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ex_item_shop_category_model_photo_ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- model 头像 -->
    <LinearLayout
        android:id="@+id/ex_item_shop_category_model_photo_ll"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp36"
        android:layout_marginBottom="@dimen/dp24"
        app:layout_constraintBottom_toTopOf="@+id/ex_item_shop_category_model_detail_ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ex_item_shop_category_model_0_civ"
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:layout_marginEnd="@dimen/dp08"
            android:contentDescription="@string/new_model"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/dp01" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ex_item_shop_category_model_1_civ"
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:contentDescription="@string/new_model"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/dp01" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ex_item_shop_category_model_2_civ"
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:layout_marginStart="@dimen/dp08"
            android:contentDescription="@string/new_model"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/dp01" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ex_item_shop_category_model_detail_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp36"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/ex_item_shop_category_model_to_bottom_slip_tv">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLength="5"
                android:text="1545447"
                android:textColor="@color/card_white_75"
                android:textSize="@dimen/sp26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp04"
                android:text="@string/commodity"
                android:textColor="@color/card_white_75"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp36"
            android:layout_marginEnd="@dimen/dp36"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLength="5"
                android:text="1598989855898845"
                android:textColor="@color/card_white_75"
                android:textSize="@dimen/sp26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp04"
                android:text="@string/commodity"
                android:textColor="@color/card_white_75"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLength="5"
                android:text="15451 4814145"
                android:textColor="@color/card_white_75"
                android:textSize="@dimen/sp26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp04"
                android:text="@string/commodity"
                android:textColor="@color/card_white_75"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/ex_item_shop_category_model_to_bottom_slip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16"
        android:drawableBottom="@drawable/ic_vd_nav_bottom"
        android:text="@string/to_bottom_slip"
        android:textColor="@color/card_white_50"
        android:textSize="@dimen/sp12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>