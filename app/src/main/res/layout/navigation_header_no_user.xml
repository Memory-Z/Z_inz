<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp192"
      android:background="@color/colorPrimaryDark"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="@dimen/dp20"
      android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/nav_header_no_detail_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:gravity="center"
        android:text="@string/nav_no_detail_example"
        android:textSize="@dimen/sp18" />

    <Button
        android:id="@+id/nav_header_no_login_btn"
        android:layout_width="@dimen/dp192"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/bg_button_default"
        android:text="@string/login_immediately"
        android:textSize="@dimen/sp18" />
  </LinearLayout>
</layout>