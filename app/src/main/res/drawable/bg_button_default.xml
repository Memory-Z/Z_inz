<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/color_card_blue_1" />
            <corners android:radius="@dimen/dp04" />
            <stroke android:width="@dimen/dp01" android:color="@color/color_line_gray_default" />
        </shape>
    </item>

    <!-- 弹起 -->
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/color_card_blue_default" />
            <corners android:radius="@dimen/dp04" />
            <stroke android:width="@dimen/dp01" android:color="@color/color_line_gray_default" />
        </shape>
    </item>
    <!-- 默认 -->
    <item>
        <shape>
            <solid android:color="@color/color_card_blue_default" />
            <corners android:radius="@dimen/dp04" />
            <stroke android:width="@dimen/dp01" android:color="@color/color_line_gray_1" />
        </shape>
    </item>

</selector>