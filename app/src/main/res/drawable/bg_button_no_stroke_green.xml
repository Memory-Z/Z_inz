<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/card_green_3" />
            <corners android:bottomLeftRadius="@dimen/dp08" android:bottomRightRadius="@dimen/dp08" />
        </shape>
    </item>

    <!-- 弹起 -->
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/card_green_1" />
            <corners android:bottomLeftRadius="@dimen/dp08" android:bottomRightRadius="@dimen/dp08" />
        </shape>
    </item>
    <!-- 默认 -->
    <item>
        <shape>
            <solid android:color="@color/card_green_1" />
            <corners android:bottomLeftRadius="@dimen/dp08" android:bottomRightRadius="@dimen/dp08" />
        </shape>
    </item>

</selector>