<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/color_card_green_2" />
            <corners android:bottomRightRadius="@dimen/dp04" android:topRightRadius="@dimen/dp04" />
        </shape>
    </item>

    <!-- 弹起 -->
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/color_card_green_default" />
            <corners android:bottomRightRadius="@dimen/dp04" android:topRightRadius="@dimen/dp04" />
        </shape>
    </item>
    <!-- 默认 -->
    <item>
        <shape>
            <solid android:color="@color/color_card_green_default" />
            <corners android:bottomRightRadius="@dimen/dp04" android:topRightRadius="@dimen/dp04" />
        </shape>
    </item>

</selector>