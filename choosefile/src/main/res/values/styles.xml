<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChooseFileCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/photo_check_box</item>
    </style>

    <!-- 底部弹出动画 -->
    <style name="ChooseFileCheckBox.BottomDialogAnim">
        <item name="android:windowEnterAnimation">@anim/pop_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/pop_out_bottom</item>
    </style>

    <!--Dialog 样式-->
    <style name="ChooseFileCheckBox.DialogTheme" parent="Theme.AppCompat.Dialog">
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否显示title-->
        <item name="android:windowNoTitle">true</item>
        <!--设置dialog的背景，（#00000000）-->
        <item name="android:background">@android:color/transparent</item>
        <!--显示区域背景是否透明，（#00000000）-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 底部弹窗 -->
    <style name="ChooseFileCheckBox.BottomDialog" parent="ChooseFileCheckBox.DialogTheme">
        <item name="android:windowBackground">@color/choose_file_dialog_bg</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TextGroupCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/bg_text_group_selector</item>
        <item name="android:paddingStart">16dp</item>
    </style>
</resources>