<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/app_update_fragment_install_base_rl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_update_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 安装 -->
        <TextView
            android:id="@+id/app_update_fragment_install_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:id="@+id/app_update_fragment_install_content_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_update_fragment_install_title_tv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/app_update_fragment_install_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/app_update_fragment_install_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_update_fragment_install_content_ll"
            android:background="@drawable/bg_update_dialog_left_btn" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>